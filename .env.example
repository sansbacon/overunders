# Flask Configuration
SECRET_KEY=your-secret-key-change-this-in-production
FLASK_ENV=development

# Database Configuration
DEV_DATABASE_URL=sqlite:///over_under_dev.db

# Email Configuration - Choose ONE option below

# Option 1: SendGrid API (Recommended for production)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
USE_SENDGRID_API=true
MAIL_DEFAULT_SENDER=noreply@yourdomain.com

# Option 2: SMTP (Alternative - comment out SendGrid if using this)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=true
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_DEFAULT_SENDER=your-email@gmail.com

# Server Configuration (for generating email links)
SERVER_NAME=localhost:5000

# Google OAuth Configuration (optional - for Google login)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OpenAI Configuration (for auto-generating contests)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Content Moderation Configuration
AI_MODERATION_ENABLED=false
CONTENT_MODERATION_LOG_ENABLED=true
AUTO_MODERATE_NEW_CONTENT=true
MODERATE_AI_GENERATED_CONTENT=true

# Verification Requirements Configuration
REQUIRE_VERIFICATION_FOR_CONTESTS=false
REQUIRE_VERIFICATION_FOR_LEAGUES=false
ALLOW_UNVERIFIED_PARTICIPATION=true
MINIMUM_VERIFICATION_LEVEL_CONTESTS=basic
MINIMUM_VERIFICATION_LEVEL_LEAGUES=basic

# Optional: Custom reply-to email
# MAIL_REPLY_TO=support@yourdomain.com

# Production Environment Variables (for Heroku deployment)
# DATABASE_URL=postgres://... (automatically set by Heroku)
# SECRET_KEY=your-production-secret-key
# SENDGRID_API_KEY=your-production-sendgrid-key
# USE_SENDGRID_API=true
# MAIL_DEFAULT_SENDER=noreply@yourdomain.com
